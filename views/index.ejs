<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Buku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4 text-center">Daftar Buku Perpustakaan</h1>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <a href="/add" class="btn btn-primary">Tambah Buku Baru</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Judul</th>
                            <th>Penulis</th>
                            <th>Penerbit</th>
                            <th>Tahun Terbit</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (books.length > 0) { %>
                            <% books.forEach(book => { %>
                                <tr>
                                    <td><%= book.judul %></td>
                                    <td><%= book.penulis %></td>
                                    <td><%= book.penerbit %></td>
                                    <td><%= book.tahun_terbit %></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="/edit/<%= book.id %>" class="btn btn-sm btn-warning">Edit</a>
                                          <form action="/buku/delete/<%= book.id %>?_method=DELETE" method="POST" style="display:inline;">
  <button type="submit" onclick="return confirm('Yakin hapus?')">Delete</button>
</form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center text-muted">Belum ada data buku.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>